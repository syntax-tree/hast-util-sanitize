{
  "name": "hast-util-sanitize",
  "version": "4.0.0",
  "description": "hast utility to sanitize nodes",
  "license": "MIT",
  "keywords": [
    "unist",
    "hast",
    "hast-util",
    "util",
    "utility",
    "html",
    "clean",
    "xss",
    "safe",
    "sanitize"
  ],
  "repository": "syntax-tree/hast-util-sanitize",
  "bugs": "https://github.com/syntax-tree/hast-util-sanitize/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Jason Switzer <jswitzer@gmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/hast": "^2.0.0"
  },
  "devDependencies": {
    "@types/tape": "^4.0.0",
    "c8": "^7.0.0",
    "deepmerge": "^4.0.0",
    "hast-util-to-html": "^8.0.0",
    "hastscript": "^7.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "rimraf": "^3.0.0",
    "tape": "^5.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^4.0.0",
    "unist-builder": "^3.0.0",
    "xo": "^0.53.0"
  },
  "scripts": {
    "prepack": "npm run build && npm run format",
    "build": "rimraf \"{lib/**,}*.d.ts\" && tsc && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --check-coverage --100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true,
    "#": "Couple of needed `any`s",
    "ignoreFiles": [
      "lib/index.d.ts"
    ]
  }
}
